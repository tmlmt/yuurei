{
  "name": "yuurei",
  "description": "Fork of Edge, a portfolio-oriented Ghost theme",
  "version": "1.3.3",
  "private": true,
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "author": {
    "name": "Thomas Lamant",
    "email": "tom@tmlmt.com",
    "url": "https://www.tmlmt.com"
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tmlmt/yuurei"
  },
  "bugs": "https://github.com/tmlmt/yuurei/issues",
  "contributors": [
    "https://github.com/TryGhost/Edge/graphs/contributors"
  ],
  "docs": "https://edge.ghost.io/about/",
  "config": {
    "posts_per_page": 10,
    "image_sizes": {
      "xs": {
        "width": 150
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 750
      },
      "l": {
        "width": 1140
      },
      "xl": {
        "width": 1920
      }
    },
    "card_assets": true,
    "custom": {
      "navigation_layout": {
        "type": "select",
        "options": [
          "Logo on the left",
          "Logo in the middle",
          "Stacked"
        ],
        "default": "Logo in the middle"
      },
      "title_font": {
        "type": "select",
        "options": [
          "Modern sans-serif",
          "Elegant serif"
        ],
        "default": "Modern sans-serif"
      },
      "body_font": {
        "type": "select",
        "options": [
          "Modern sans-serif",
          "Elegant serif"
        ],
        "default": "Modern sans-serif"
      },
      "show_related_posts": {
        "type": "boolean",
        "default": true,
        "group": "post"
      },
      "related_posts_title": {
        "type": "text",
        "default": "You might also like...",
        "group": "post"
      },
      "linkedin": {
        "type": "text"
      },
      "feature_image_size": {
        "type": "select",
        "options": [
          "Wide",
          "Regular"
        ],
        "default": "Wide",
        "group": "post"
      }
    }
  },
  "scripts": {
    "dev": "gulp",
    "test": "gscan .",
    "zip": "gulp zip"
  },
  "devDependencies": {
    "@tryghost/shared-theme-assets": "2.1.0",
    "autoprefixer": "10.4.14",
    "beeper": "2.1.0",
    "cssnano": "6.0.0",
    "gscan": "4.36.2",
    "gulp": "4.0.2",
    "gulp-concat": "2.6.1",
    "gulp-livereload": "4.0.2",
    "gulp-postcss": "9.0.1",
    "gulp-uglify": "3.0.2",
    "gulp-zip": "5.1.0",
    "postcss": "8.4.23",
    "postcss-easy-import": "4.0.0",
    "pump": "3.0.0"
  }
}